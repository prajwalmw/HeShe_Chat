<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="80dp"
    android:layout_marginTop="5dp">

    <RelativeLayout
        android:id="@+id/relative_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_alignParentStart="true"
            android:background="@drawable/receive_drawable"
            android:orientation="vertical">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/image"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:scaleType="fitXY"
                android:visibility="gone"
                app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.ReceiveImage"
                app:srcCompat="@drawable/avatar" />

            <TextView
                android:id="@+id/message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lato"
                android:gravity="center_vertical"
                android:lineSpacingExtra="3sp"
                android:paddingStart="12dp"
                android:paddingTop="14dp"
                android:paddingEnd="12dp"
                android:paddingBottom="14dp"
                tools:text="Hello"
                android:text="Hello world this is a new world full of fun and games."
                android:textAppearance="@style/hi_how_to_c"
                android:textColor="@null"
                android:textSize="@null" />
        </LinearLayout>
    </RelativeLayout>

    <ImageView
        android:id="@+id/feeling"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:padding="1dp"
        android:layout_centerVertical="true"
        app:srcCompat="@drawable/ic_fb_love"
        android:visibility="invisible"
        android:layout_toEndOf="@id/relative_2"
        tools:visibility="visible"/>

    <TextView
        android:id="@+id/time_txtview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="2dp"
        android:text="hh:mm"
        android:textSize="8sp"
        android:layout_below="@id/relative_2"
        android:layout_alignParentStart="true" />




</RelativeLayout>